<main>
  <p></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <div class="container px-5 px-sm-0">
          <div id="error_explanation">
            <% if @book_one.errors.any? %>
              <h3>
                <% if @book_one.errors.count == 1 %>
                  <%= @book_one.errors.count %> error prohibited this obj from being saved:
                <% else %>
                  <%= @book_one.errors.count %> errors prohibited this obj from being saved:
                <% end %>
              </h3>
              <ul>
                <% @book_one.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
        <%= form_with model: @book_one, method: :patch do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title ,class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body ,class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book" ,class: "btn btn-success"%>
          </div>
        <% end %>
        <%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</main>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>